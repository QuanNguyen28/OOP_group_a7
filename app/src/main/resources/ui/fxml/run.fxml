<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controller.RunController">

    <!-- Thanh công cụ trên cùng -->
    <top>
        <ToolBar>
            <items>
                <Label text="Humanitarian Analytics (Offline)"/>
                <Separator orientation="VERTICAL"/>

                <Label text="Keyword:"/>
                <TextField fx:id="keywordField"
                           promptText="ví dụ: yagi, ragasa, cuu tro"
                           prefWidth="280"/>

                <Separator orientation="VERTICAL"/>
                <Label text="From:"/>
                <DatePicker fx:id="fromDate" promptText="yyyy-MM-dd"/>
                <Label text="To:"/>
                <DatePicker fx:id="toDate" promptText="yyyy-MM-dd"/>

                <Button fx:id="runBtn" text="Run Ingest" onAction="#onRunIngest">
                    <tooltip><Tooltip text="Nạp &amp; phân tích dữ liệu theo từ khóa"/></tooltip>
                </Button>
                <Button text="Open Dashboard" onAction="#onOpenLastDashboard">
                    <tooltip><Tooltip text="Mở dashboard gần nhất"/></tooltip>
                </Button>
                <Button text="Collector…" onAction="#onOpenCollector">
                    <tooltip><Tooltip text="Mở cửa sổ thu thập dữ liệu (news, YouTube, Reddit)"/></tooltip>
                </Button>
                <!-- Spacer giãn sang phải: dùng thuộc tính HBox.hgrow -->
                <Pane HBox.hgrow="ALWAYS"/>

                <Label fx:id="dbLabel" text="DB: …" style="-fx-opacity: 0.7;"/>
            </items>
        </ToolBar>
    </top>

    <!-- Nội dung trung tâm -->
    <center>
        <VBox spacing="12.0" alignment="CENTER">
            <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>
            <Label fx:id="statusLabel" text="Ready"/>
        </VBox>
    </center>

</BorderPane>